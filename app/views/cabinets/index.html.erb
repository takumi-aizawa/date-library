<h1 class="display-3 text-primary">Cabinet</h1>

<h3><%= @msg %></h3>



<table class="table table-striped table-bordered text-center "> <%# table class="table" 基本のテーブルが作成される＋α %>

  <tr class="table-primary ">
    <th>No.</th><th>File No.</th><th>File Name</th><th>保管期限</th><th>保管場所</th><th>ステータス</th><th>起案者</th><th>承認者</th>
  </tr>

  <% @cabinets.each do |obj| %>
  <tr>
    <td><%= obj.id %></td>
    <td><%= obj.file_no %></td>
    <td><%= obj.file_name %></td>
    <td><%= obj.expired_at %></td>
    <td><%= obj.placed_at %></td>
    <td><%= obj.status %></td>
    <td><%= obj.user_id %></td>
    <td><%= obj.manager_id %></td>
  </tr>
  
  <% end %>
</table>

<%= paginate @cabinets %> <%# ページネイトができるようになる %>