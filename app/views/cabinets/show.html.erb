<%= form_with(model: @cabinet, local: true) do |f| %>

<h1 class="display-5 text-dark">Cabinet(詳細)</h1>

<table class="table table-striped table table-bordered ">
  <tr>
    <th class="table-primary ">項目</th>
    <td class="table-primary ">内容</td>
  </tr>
  <tr>
    <th>登録No</th>
    <td><%= @cabinet.id %></td>
  </tr>
  <tr>
    <th>ファイルＮｏ</th>
    <td><%= @cabinet.file_no %></td>
  </tr>
  <tr>
    <th>ファイル名</th>
    <td><%= @cabinet.file_name %></td>
  </tr>
  <tr>
    <th>保管期限</th>
    <td><%= @cabinet.expired_at %></td>
  </tr>
  <tr>
    <th>保管場所</th>
    <td><%= @cabinet.placed_at %></td>
  </tr>
    <tr>
    <th>ステータス</th>
    <td><%= @cabinet.status %></td>
  </tr>
  <tr>
    <th>起案者</th>
    <td><%= @cabinet.user_id %></td>
  </tr>
  <tr>
    <th>起案日</th>
    <td><%= @cabinet.created_at %></td>
  </tr>

</table>

<%= link_to '一覧に戻る', cabinets_path, class: 'btn btn-light'  %>

<%= link_to '編集', edit_cabinet_path, class: 'btn btn-info' %>
<%= link_to '申請取消し', @cabinet, method: :delete, data: { confirm: '本当に取り消してよろしいですか？' }, class: 'btn btn-warning' %>
<%= link_to '削除申請', @cabinet, method: :delete, data: { confirm: '削除申請してよろしいですか？' }, class: 'btn btn-danger' %> <%# 保留 %>
<% end %>