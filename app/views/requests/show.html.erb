<h1 class="display-5 text-dark">Request(詳細)</h1>

<table class="table table-striped table table-bordered ">
  <tr>
    <th class="table-primary ">項目</th>
    <td class="table-primary ">内容</td>
  </tr>
  <tr>
    <th>id</th>
    <td><%= @request.id %></td>
  </tr>
  <tr>
    <th>ファイルＮｏ</th>
    <td><%= @request.file_no %></td>
  </tr>
  <tr>
    <th>ファイル名</th>
    <td><%= @request.file_name %></td>
  </tr>
  <tr>
    <th>保管期限</th>
    <td><%= @request.expired_at %></td>
  </tr>
  <tr>
    <th>保管場所</th>
    <td><%= @request.placed_at %></td>
  </tr>
  <tr>
    <th>起案者</th>
    <td><%= @request.user_id %></td>
  </tr>
  <tr>
    <th>起案日</th>
    <td><%= @request.created_at %></td>
  </tr>
  <tr>
    <th>コメント</th>
    <td><%= @request.comment %></td>
  </tr>
</table>

<%= link_to '一覧に戻る', requests_path, class: 'btn btn-light'  %>

<%= link_to '承　   認', controller: :Cabinets, action: :update_accept, class: 'btn btn-primary' %>
