<h1 class="display-5 text-dark">Cabinet(詳細)</h1>

<table class="table table-striped table table-bordered ">
  <tr>
    <th class="table-primary ">項目</th>
    <td class="table-primary ">内容</td>
  </tr>
  <tr>
    <th>登録No</th>
    <td><%= @request.id %></td>
  </tr>
  <tr>
    <th>ファイルＮｏ</th>
    <td><%= @request.file_no %></td>
  </tr>
  <tr>
    <th>ファイル名</th>
    <td><%= @request.file_name %></td>
  </tr>
  <tr>
    <th>保管期限</th>
    <td><%= @request.expired_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>保管場所</th>
    <td><%= @request.placed_at %></td>
  </tr>
    <tr>
    <th>ステータス</th>
    <td><%= @request.status %></td>
  </tr>
  <tr>
    <th>起案者</th>
    <td><%= @request.user_id %></td>
  </tr>
  <tr>
    <th>起案日</th>
    <td><%= @request.created_at.strftime('%Y/%m/%d') %></td>
  </tr>

</table>

<%= link_to '一覧に戻る', requests_path, class: 'btn btn-light'  %>

<%= link_to '承　　 認', update_accept_path(id: @request.id), method: :patch, data: { confirm: '本当に承認してよろしいですか？' }, class: 'btn btn-primary' %>
<%# @request.id⇒requests controllerに定義しているものが@requestのみのため %>

<%= link_to '差し戻し', @request, method: :delete, data: { confirm: '本当に差し戻してよろしいですか？' }, class: 'btn btn-danger' %>
